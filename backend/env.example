# Application
APP_NAME=Proper Prompts
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/proper_prompts
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://prompt.westwetlandtech.com"]

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=4096

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
PERFORMANCE_LOG_FILE=logs/performance.log

# External Integration URLs
BROWSER_LLM_ORCHESTRATOR_URL=
CHATLOG_URL=
HEALTH_LLM_DRIVEN_URL=

# Copy this file to .env and update values

